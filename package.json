{
  "name": "secure-remote-password",
  "version": "0.3.1",
  "license": "MIT",
  "description": "A modern SRP implementation for Node.js and web browsers",
  "author": "Linus Unneb√§ck <linus@folkdatorn.se>",
  "contributors": [
    "Mathieu Actherneone <zoontek@gmail.com>"
  ],
  "homepage": "https://github.com/zoontek/secure-remote-password#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/secure-remote-password.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "srp",
    "srp6a",
    "authentication",
    "remote",
    "password"
  ],
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,esm src/index.ts",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*.{js,md,ts,tsx}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "tscheck": "tsc --noEmit",
    "prepare": "yarn test && yarn build"
  },
  "browser": {
    "./lib/sha256.js": "./browser/sha256.js"
  },
  "prettier": {
    "trailingComma": "all"
  },
  "dependencies": {
    "array-buffer-to-hex": "^1.0.0",
    "crypto-digest-sync": "^1.0.0",
    "crypto-random-hex": "^1.0.0",
    "hex-to-array-buffer": "^2.0.0",
    "jsbn": "^1.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "@types/jsbn": "^1.2.29",
    "babel-jest": "^27.2.5",
    "jest": "^27.2.5",
    "microbundle": "^0.14.1",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typescript": "^4.4.4"
  }
}
